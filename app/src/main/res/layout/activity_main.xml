<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alteration.valdiearsanur.pertemuan2.MainActivity">

    <TextView
        android:id="@+id/label_input_idr"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rupiah"
        android:textColor="@android:color/holo_green_dark" />

    <EditText
        android:id="@+id/text_input_idr"
        android:layout_below="@+id/label_input_idr"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLines="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Masukkan Nominal"
        android:backgroundTint="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/label_hasil_usd"
        android:layout_below="@+id/text_input_idr"

        android:text="SG Dollar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="SG Dollar"
        android:layout_marginTop="121dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/label_hasil_sgd"
        android:layout_below="@+id/text_hasil_sgd"

        android:text="US Dollar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="US Dollar"
        android:layout_marginTop="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/text_hasil_usd"
        android:focusable="false"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLines="1"
        android:hint="USD"
        android:layout_below="@+id/label_hasil_sgd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false" />

    <EditText
        android:id="@+id/text_hasil_sgd"
        android:focusable="false"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLines="1"
        android:hint="SGD"
        android:layout_below="@+id/label_hasil_usd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false" />

    <Button
        android:id="@+id/button_hasil"
        android:text="Konversi Uang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
